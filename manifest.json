{
  "manifest_version": 3,
  "name": "Youtube Distraction Blocker",
  "version": "2.0",
  "description": "Removes distracting elements like comments, recommendations, and shorts from YouTube.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
  {
    "resources": ["contact.html"],
    "matches": ["<all_urls>"]
  }
]
}